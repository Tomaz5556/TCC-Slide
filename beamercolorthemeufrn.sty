\usepackage{color}
%R G B
\DefineNamedColor{named}{azul2}{RGB}{0,156,59} %rodape barra do meio e o título
\DefineNamedColor{named}{azul1}{RGB}{105,105,105} %rodape primeira barra
\DefineNamedColor{named}{azul3}{RGB}{105,105,105}
%rodape terceira barra e Superior
\DefineNamedColor{named}{laranja1}{RGB}{255,146,5}

\mode<presentation>
\setbeamercolor{author in head/foot}{bg=azul1, fg=white}%rodape primeira barra
\setbeamercolor{title in head/foot}{bg=azul1, fg=white}%rodape barra do meio
%\setbeamercolor{institute in head/foot}{fg=instituteColor}
\setbeamercolor{date in head/foot}{bg=azul3, fg=white}%rodape terceira barra

\setbeamercolor{alerted text}{fg=azul1!80!laranja1}
\setbeamercolor*{palette primary}{fg=white,bg=azul2}
\setbeamercolor*{palette secondary}{fg=laranja1,bg=white}
\setbeamercolor*{palette tertiary}{fg=white,bg=azul1}%menu superior (como fg=black, o texto nao aparece)
\setbeamercolor*{palette quaternary}{fg=white,bg=laranja1}
\setbeamercolor*{structure}{fg=azul3,bg=white}%texto do sumário
\setbeamercolor{frametitle}{fg=white,bg=azul2}%título dos slides
\mode<all>

\defbeamertemplate*{footline}{ufrn theme}
{%
	\leavevmode%
	\hbox{
		\begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{author in head/foot}%
			\usebeamerfont{author in head/foot}\insertshortauthor%~~
			%\insertshortinstitute
		\end{beamercolorbox}%
		
		\begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{title in head/foot}%
			\usebeamerfont{title in head/foot}\insertshorttitle
		\end{beamercolorbox}%
		
		\begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,right]{date in head/foot}%
			\usebeamerfont{date in head/foot}\insertshortdate{}\hspace*{2em}\insertframenumber{} / \inserttotalframenumber\hspace*{2ex}
		\end{beamercolorbox}}%
	\vskip0pt%
}

